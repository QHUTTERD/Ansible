---
- name: Upgrade Docker and Docker Compose
  hosts: all
  become: yes

  tasks:
    - name: Update package cache (apt)
      apt:
        update_cache: yes
      when: ansible_pkg_mgr == 'apt'

    - name: Update package cache (yum)
      yum:
        name: '*'
        state: latest
      when: ansible_pkg_mgr == 'yum'

    - name: Install required packages for Docker (apt)
      package:
        name:
          - apt-transport-https
          - ca-certificates
          - curl
          - gnupg-agent
          - software-properties-common
      when: ansible_pkg_mgr == 'apt'

    - name: Install required packages for Docker (yum)
      package:
        name:
          - yum-utils
          - device-mapper-persistent-data
          - lvm2
      when: ansible_pkg_mgr == 'yum'

    - name: Add Docker's official GPG key (apt)
      apt_key:
        url: https://download.docker.com/linux/{{ ansible_distribution|lower }}/gpg
      when: ansible_pkg_mgr == 'apt'

    - name: Add Docker's official GPG key (yum)
      rpm_key:
        key: https://download.docker.com/linux/{{ ansible_distribution|lower }}/gpg
      when: ansible_pkg_mgr == 'yum'

    - name: Add Docker's APT repository
      apt_repository:
        repo: "deb [arch=amd64] https://download.docker.com/linux/{{ ansible_distribution|lower }} {{ ansible_distribution_release }} stable"
        state: present
      when: ansible_pkg_mgr == 'apt'

    - name: Add Docker's YUM repository
      yum_repository:
        name: docker-ce-stable
        description: Docker CE Stable - $basearch
        baseurl: https://download.docker.com/linux/{{ ansible_distribution|lower }}/$releasever/$basearch/stable
        gpgcheck: yes
        enabled: yes
      when: ansible_pkg_mgr == 'yum'

    - name: Install Docker
      package:
        name: docker-ce docker-ce-cli containerd.io
        state: latest
      when: ansible_pkg_mgr == 'apt' or ansible_pkg_mgr == 'yum'

    - name: Upgrade Docker Compose
      shell: curl -L "https://github.com/docker/compose/releases/latest/download/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose && chmod +x /usr/local/bin/docker-compose
      args:
        creates: /usr/local/bin/docker-compose

    - name: Ensure Docker Compose symlink is present
      file:
        src: /usr/local/bin/docker-compose
        dest: /usr/bin/docker-compose
        state: link

    - name: Restart Docker service
      service:
        name: docker
        state: restarted
